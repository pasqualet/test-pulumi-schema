{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["*"]
        },
        "strict": true
    },
    "files": [
        "index.ts",
        "kubernetes/cluster.ts",
        "kubernetes/index.ts",
        "kubernetes/nodeGroup.ts",
        "password.ts",
        "provider.ts",
        "storage/bucket.ts",
        "storage/index.ts",
        "utilities.ts"
    ]
}
